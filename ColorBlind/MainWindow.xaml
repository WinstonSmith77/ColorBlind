<Window x:Class="ColorBlind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorBlind"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Button DockPanel.Dock="Top" Click="Button_Click">Snap!</Button>
      
        <Slider Minimum="0" Maximum="1000" Value="20" x:Name="brightness" DockPanel.Dock="Top"></Slider>
        <Slider Minimum="0" Maximum="1000" Value="20" x:Name="contrast"  DockPanel.Dock="Top"></Slider>
        <Slider Minimum="0" Maximum="1000" Value="20" x:Name="gain" DockPanel.Dock="Top"></Slider>
        <Slider Minimum="0" Maximum="1000" Value="20" x:Name="sat"  DockPanel.Dock="Top"></Slider>
        <Image x:Name="Image"></Image>
    </DockPanel>
</Window>
